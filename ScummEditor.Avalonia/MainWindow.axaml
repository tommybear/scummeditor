<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ScummEditor.AvaloniaApp"
    x:Class="ScummEditor.AvaloniaApp.MainWindow"
    Title="SCUMM Editor (Avalonia preview)"
    Width="1000" Height="700">
  <Grid RowDefinitions="Auto, Auto, *" ColumnDefinitions="280, *" Margin="16">
    <TextBlock Grid.ColumnSpan="2" Text="SCUMM Editor (Avalonia)" FontSize="22" FontWeight="SemiBold" />
    <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="0,4,0,8" Foreground="#9BA4B0" x:Name="StatusText" Text="No file loaded." />

    <Border Grid.Row="2" Margin="0,12,12,0" Background="#0F1A2B" CornerRadius="8" Padding="12">
      <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Spacing="8">
          <Button x:Name="OpenButton" Content="Open File" Width="120" />
        </StackPanel>
        <TreeView x:Name="ResourceTree" ItemsSource="{Binding Nodes}" Margin="0,8,0,0" BorderBrush="#1E2A3D" BorderThickness="1" Background="#111827">
          <TreeView.DataTemplates>
            <TreeDataTemplate DataType="local:ResourceNode" ItemsSource="{Binding Children}">
              <TextBlock Text="{Binding Name}" Foreground="#E6EDF3" />
            </TreeDataTemplate>
          </TreeView.DataTemplates>
        </TreeView>
      </DockPanel>
    </Border>

    <Border Grid.Row="2" Grid.Column="1" Margin="0,12,0,0" Background="#121826" CornerRadius="8" Padding="16">
      <StackPanel Spacing="12">
        <TextBlock Foreground="#E6EDF3" FontWeight="SemiBold" Text="Preview" />
        <ScrollViewer Height="560">
          <TextBlock x:Name="DetailsText" Foreground="#E6EDF3" TextWrapping="Wrap" />
        </ScrollViewer>
      </StackPanel>
    </Border>
  </Grid>
</Window>
