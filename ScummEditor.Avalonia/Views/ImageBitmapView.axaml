<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ai="clr-namespace:Avalonia.Media.Imaging;assembly=Avalonia.Base"
             x:Class="ScummEditor.AvaloniaApp.Views.ImageBitmapView">
  <ScrollViewer Height="560" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    <Image x:Name="ImageControl" Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Center"
           RenderOptions.BitmapInterpolationMode="LowQuality" />
  </ScrollViewer>
</UserControl>
